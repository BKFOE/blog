<%- include("partials/header.ejs") %>

<div class="border-bottom border-black">
<div class="container col-xxl-8 px-4 py-4">
  <div class="row flex-lg-row-reverse align-items-center g-5">
    <div class="col-10 col-sm-8 col-lg-6">
      <img src="images/foggie.jpg" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
      <div>
        <p>@foggieraw</p>
      </div>
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3 text">Stay Curious.</h1>
      <h2 class="lead">Discover stories, thinking, and expertise straight from my head to the screen.</h2>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a href="/compose" class="btn btn-dark rounded-pill btn-lg px-4 me-md-2">Start writing</a>
      </div>
    </div>
  </div>
</div>
</div>

<main class="container">  
      <div class="container pc">
        <h4 class="fst-italic">Latest wonderings...</h4>
            <div class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top">
              <svg class="bd-placeholder-img" width="200px" height="134px" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777"></rect></svg>
              <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-success-emphasis">Javascript</strong>
                <h3 class="mb-0">Parsing data to EJS templates</h3>
                <div class="mb-1 text-body-secondary"><%= getFullDate %></div>
                <p class="mb-auto">I am learning to parse data via embedded javascript templates and here is some of the good, the bad, and the ugly of...</p>
                <a href="/febnine">Read more</a>
              </div>
            </div>

        <ul id="blogPostList" class="list-unstyled">
          <% blogPosts.forEach((post, index) => { %>
            <% if (post.existing) { %>
          
          <li>  
            <div class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top">
              <svg class="bd-placeholder-img" width="200px" height="134px" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777"></rect></svg>
              <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-success-emphasis">Javascript</strong>
                <h3 class="mb-0"><%= post.title %></h3>
                <div class="mb-1 text-body-secondary"><%= getFullDate %></div>
                <p class="mb-auto"><%= post.content.slice(0, 140) + "..." %> </p>
                <a href="/<%= encodeURIComponent(post.title) %>">Read more</a>
            </div>
          </li>
        <%} %> 
        <% }); %>
        </ul>
      </div>
  <%- include("partials/footer.ejs") %>